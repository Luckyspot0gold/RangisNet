{
  "manifest_version": 3,
  "name": "RangisNet BrowserMCP",
  "version": "1.0.0",
  "description": "Multi-Sensory AI Agent for Autonomous Blockchain Trading",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "https://phantom.app/*",
    "https://*.metamask.io/*",
    "https://www.coinbase.com/*",
    "https://app.uniswap.org/*",
    "https://raydium.io/*",
    "https://core.app/*",
    "https://testnet.snowtrace.io/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://phantom.app/*",
        "https://*.metamask.io/*",
        "https://www.coinbase.com/*",
        "https://app.uniswap.org/*",
        "https://raydium.io/*",
        "https://core.app/*"
      ],
      "js": ["content/wallet-controller.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["shared/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://thirdweb.com/*",
      "*://*.thirdweb.com/*",
      "*://kite.ai/*",
      "*://*.kite.ai/*"
    ]
  }
}
